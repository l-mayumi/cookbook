<%= form_with(url: "/search", method: "get", local: true) do %>
  <div class="form-inline">
    <div class="form-group">
      <span class="mr-sm-2"><%= label_tag(:busca, "Buscar receita") %></span>
      <span class="mr-sm-2"><%= text_field_tag(:busca) %></span>
    </div>

    <%= submit_tag 'Buscar', class: "btn btn-dark" %>
  </div>
<% end %>