<% @recipes.each do |recipe| %>
  <article class="col-sm-6 float-left media">
    <p>
      <%= image_tag recipe.recipe_photo, class: "float-left item-img rounded-circle" %>
      <div class="media-body">
        <h4><%= link_to recipe.title, recipe %></h4>
        <ul>
          <li><%= recipe.recipe_type.name %></li>
          <li><%= recipe.cuisine.name %></li>
          <li><%= recipe.difficulty %></li>
          <li><%= recipe.cook_time_min %></li>
        </ul>
      </div>
    </p>
  </article>
<% end %>