<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for @recipe do |form| %>
  <div class="form-group">
    <%= form.label :title , 'TÃ­tulo'%><br>
    <%= form.text_field :title %>
  </div>
 
  <div class="form-group">
    <%= form.label :recipe_type_id, 'Tipo da Receita' %>
    <%= form.collection_select(:recipe_type_id, @recipe_types, :id, :name) %>
  </div>

  <div class="form-group">
    <%= form.label :cuisine_id, 'Cozinha' %>
    <%= form.collection_select(:cuisine_id, @cuisines, :id, :name) %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, 'Dificuldade' %><br>
    <%= form.text_field :difficulty %>
  </div>

  <div class="form-group">
    <%= form.label :cook_time, 'Tempo de Preparo' %><br>
    <%= form.number_field :cook_time %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients, 'Ingredientes' %><br>
    <%= form.text_area :ingredients %>
  </div>
 
  <div class="form-group">
    <%= form.label :cook_method, 'Como Preparar' %><br>
    <%= form.text_area :cook_method %>
  </div>

  <div class="form-group">
    <%= form.label :recipe_photo, 'Enviar foto'%>
    <%= form.file_field :recipe_photo %>
  </div>

  <div class="form-group">
    <%= form.submit 'Enviar', class: "btn btn-dark" %>
  </div>
<% end %>