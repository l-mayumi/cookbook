<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for @recipe do |form| %>
  <div class="form-group">
    <%= form.label :title , 'TÃ­tulo', class: "col-form-label" %><br>
    <%= form.text_field :title, class: "form-control col-auto" %>
  </div>
 
  <div class="form-group">
    <%= form.label :recipe_type_id, 'Tipo da Receita', class: "col-form-label" %>
    <%= form.collection_select :recipe_type_id, @recipe_types, :id, :name, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
    <%= form.label :cuisine_id, 'Cozinha', class: "col-form-label" %>
    <%= form.collection_select :cuisine_id, @cuisines, :id, :name, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty, 'Dificuldade', class: "col-form-label" %><br>
    <%= form.text_field :difficulty, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
    <%= form.label :cook_time, 'Tempo de Preparo', class: "col-form-label" %><br>
    <%= form.number_field :cook_time, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients, 'Ingredientes', class: "col-form-label" %><br>
    <%= form.text_area :ingredients, class: "form-control col-auto" %>
  </div>
 
  <div class="form-group">
    <%= form.label :cook_method, 'Como Preparar', class: "col-form-label" %><br>
    <%= form.text_area :cook_method, class: "form-control col-auto" %>
  </div>

  <div class="form-group">
    <%= form.label :recipe_photo, 'Enviar foto', class: "col-form-label"%>
    <%= form.file_field :recipe_photo, class: "form-control-file col-auto" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Enviar', class: "btn btn-dark btn-sm" %>
  </div>
<% end %>